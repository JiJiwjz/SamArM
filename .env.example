# ============ arxiv爬取配置 ============
# 搜索关键词（用|分隔多个关键词）
ARXIV_KEYWORDS=image denoising|image deraining|reinforcement learning|embodied AI

# 搜索分类（arxiv分类ID）
ARXIV_CATEGORIES=cs.CV,cs.AI,cs.LG

# 每次查询的最大论文数
ARXIV_MAX_RESULTS=50

# 搜索排序方式：submittedDate|relevance|lastUpdatedDate
ARXIV_SORT_BY=submittedDate

# ============ DeepSeek API配置 ============
# DeepSeek API密钥（从https://platform.deepseek.com/获取）
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek API端点
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# 使用的模型名称
DEEPSEEK_MODEL=deepseek-chat

# API超时时间（秒）
DEEPSEEK_TIMEOUT=30

# ============ 邮件配置 ============
# 发送者邮箱
SENDER_EMAIL=your_email@qq.com

# 发送者邮箱密码或授权码
SENDER_PASSWORD=your_email_password_or_auth_code

# SMTP服务器地址
SMTP_SERVER=smtp.qq.com

# SMTP端口
SMTP_PORT=587

# 收件人邮箱（多个用|分隔）
RECIPIENT_EMAILS=recipient1@gmail.com|recipient2@outlook.com

# 邮件主题前缀
EMAIL_SUBJECT_PREFIX=【arxiv论文日报】

# ============ 定时任务配置 ============
# 任务执行时间（HH:MM格式，24小时制）
SCHEDULER_TIME=09:00

# 任务执行频率：daily|weekly
SCHEDULER_FREQUENCY=daily

# ============ 日志配置 ============
# 日志级别：DEBUG|INFO|WARNING|ERROR|CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/arxiv_mailbot.log

# 日志文件最大大小（MB）
LOG_MAX_SIZE=10

# 保留日志备份数
LOG_BACKUP_COUNT=5

# ============ 数据存储配置 ============
# 论文数据保存目录
DATA_DIR=data

# 是否保存论文PDF
SAVE_PDF=false

# 论文数据格式：json|csv
DATA_FORMAT=json

# ============ 代理配置（如需要）============
# 是否使用代理
USE_PROXY=false

# HTTP代理地址
HTTP_PROXY=http://proxy.example.com:8080

# HTTPS代理地址
HTTPS_PROXY=https://proxy.example.com:8080

# ============ 钉钉通知（可选） ============
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=YOUR_TOKEN
DINGTALK_ENABLED=true
